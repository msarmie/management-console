<?xml version="1.0" encoding="ISO-8859-1"?>
<jsp:root
 version="2.0"
 xmlns="http://www.w3.org/1999/xhtml"
 xmlns:jsp="http://java.sun.com/JSP/Page"
 xmlns:tiles="http://tiles.apache.org/tags-tiles"
 xmlns:form="http://www.springframework.org/tags/form"
 xmlns:spring="http://www.springframework.org/tags"
 xmlns:c="http://java.sun.com/jsp/jstl/core">
  <jsp:directive.page
   contentType="text/html;charset=UTF-8" />

  <tiles:insertDefinition
   name="app-base">
    <tiles:putAttribute
     name="title"
     value="New User Signup" />

    <tiles:putAttribute
     name="header-extensions">
    </tiles:putAttribute>

    <tiles:putAttribute
     name="body"><div style="margin-left:15px !important; margin-right:15px !important"><h1>Create a New Duracloud Profile </h1><br />
        <div id="account-list"
           class="account-record">
             <table border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td class="accountlabel">Profile Details</td>
              </tr>
            </table>
           <div style="height:20px"><!--  --></div>
              <jsp:include page="/WEB-INF/jspx/includes/required-field-text.jspx"/>
              <jsp:include
               page="/WEB-INF/jspx/includes/global-errors.jspx">
                <jsp:param
                 name="formName"
                 value="newUserForm" />
              </jsp:include>

              <form:form
               id="new-user-form"
               modelAttribute="newUserForm"
               method="POST">
               <jsp:include page="/WEB-INF/jspx/includes/csrf.jspx"/>
                            
                <form:hidden path="redemptionCode"/>
                <table
                 class="datatablesimple">
                  <tr>
                    <td width="16%" align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       for="first-name-text"
                       autofocus="true"
                       path="firstName">First Name:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:input
                       cssErrorClass="error"
                       id="first-name-text"
                       path="firstName" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       for="last-name-text"
                       path="lastName">Last Name:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:input
                       cssErrorClass="error"
                       id="last-name-text"
                       path="lastName" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       for="email-text"
                       path="email">Email:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:input
                       cssErrorClass="error"
                       id="email-text"
                       path="email" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       for="username-text"
                       path="username">Username:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:input
                       cssErrorClass="error"
                       id="username-text"
                       path="username" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       for="password-text"
                       path="password">Password:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:password
                       showPassword="true"
                       cssErrorClass="error"
                       id="password-text"
                       path="password" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       for="password-confirm-text"
                       path="passwordConfirm">Confirm Password:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:password
                       cssErrorClass="error"
                       id="password-confirm-text"
                       showPassword="true"
                       path="passwordConfirm" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       title="You will be asked to answer this question if you forget your password"
                       for="securityQuestion-text"
                       path="securityQuestion">Security Question:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:input
                       cssErrorClass="error"
                       id="securityQuestion-text"
                       path="securityQuestion" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right"
                     class="label">
                      <form:label
                       cssErrorClass="error"
                       title="The answer you will need to provide in order for your password to be reset"
                       for="securityAnswer-text"
                       path="securityAnswer">Answer to Security Question:</form:label>
                    </td>

                    <td
                     class="value required">
                      <form:input
                       cssErrorClass="error"
                       id="securityAnswer-text"
                       path="securityAnswer" />
                    </td>
                  </tr>

                  <tr>
                    <td align="right">
                      <form:checkbox
                       cssErrorClass="error"
                       id="termsOfUse-box"
                       path="termsOfUse"/>
                     </td>

                    <td class="required">
                      <form:label
                       cssErrorClass="error"
                       title="Check this box if you have read and agree to the DuraCloud General Terms of Use."
                       for="termsOfUse-box"
                       path="termsOfUse">I have read and accept the <a href="#" target="_blank">DuraCloud General Terms of Use</a>.</form:label>
                      </td>
                  </tr>
                </table>
            <div style="height:20px"><!--  --></div>
            <div>
              <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td align="right">
                      <button
                       id="create-user-button"
                       class="save"
                       type="submit">Create Profile</button>
                      <a
                       class="button"
                       id="cancel-button"
                       href="${pageContext.request.contextPath}">
                      Cancel</a>
                  </td>
                </tr>

              </table></div>
              <div style="height:20px"><!--  --></div>
          </form:form>
        </div></div>
      
    </tiles:putAttribute>
  </tiles:insertDefinition>
</jsp:root>

